collection="false">
  <variables>
    <variable type="" id="stake_var">Stake</variable>
    <variable type="" id="loss_var">Loss</variable>
    <variable type="" id="profit_var">Target Profit</variable>
    <variable type="" id="stake2_var">stake 2</variable>
    <variable type="" id="win_count_var">Win Count</variable>
    <variable type="" id="max_wins_var">Max Wins</variable>
  </variables>
  <block type="trade" id="trade" x="-179" y="-91">
    <field name="MARKET_LIST">synthetic_index</field>
    <field name="SUBMARKET_LIST">random_index</field>
    <field name="SYMBOL_LIST">R_100</field>
    <field name="TRADETYPECAT_LIST">digits</field>
    <field name="TRADETYPE_LIST">overunder</field>
    <field name="TYPE_LIST">both</field>
    <field name="CANDLEINTERVAL_LIST">60</field>
    <field name="TIME_MACHINE_ENABLED">FALSE</field>
    <field name="RESTARTONERROR">TRUE</field>
    <statement name="INITIALIZATION">
      <block type="variables_set" id="init_loss">
        <field name="VAR" id="loss_var" variabletype="">Loss</field>
        <value name="VALUE">
          <block type="math_number" id="loss_value">
            <field name="NUM">1000</field>
          </block>
        </value>
        <next>
          <block type="variables_set" id="init_profit">
            <field name="VAR" id="profit_var" variabletype="">Target Profit</field>
            <value name="VALUE">
              <block type="math_number" id="profit_value">
                <field name="NUM">607</field>
              </block>
            </value>
            <next>
              <block type="variables_set" id="init_stake">
                <field name="VAR" id="stake_var" variabletype="">Stake</field>
                <value name="VALUE">
                  <block type="math_number" id="stake_value">
                    <field name="NUM">2</field>
                  </block>
                </value>
                <next>
                  <block type="variables_set" id="init_stake2">
                    <field name="VAR" id="stake2_var" variabletype="">stake 2</field>
                    <value name="VALUE">
                      <block type="math_number" id="stake2_value">
                        <field name="NUM">2</field>
                      </block>
                    </value>
                    <next>
                      <block type="variables_set" id="init_win_count">
                        <field name="VAR" id="win_count_var" variabletype="">Win Count</field>
                        <value name="VALUE">
                          <block type="math_number" id="win_count_value">
                            <field name="NUM">0</field>
                          </block>
                        </value>
                        <next>
                          <block type="variables_set" id="init_max_wins">
                            <field name="VAR" id="max_wins_var" variabletype="">Max Wins</field>
                            <value name="VALUE">
                              <block type="math_number" id="max_wins_value">
                                <field name="NUM">10</field>
                              </block>
                            </value>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
    <statement name="AFTERPURCHASE_STACK">
      <block type="controls_if" id="check_win">
        <mutation else="1"></mutation>
        <value name="IF0">
          <block type="contract_check_result" id="check_result_win">
            <field name="CHECK_RESULT">win</field>
          </block>
        </value>
        <statement name="DO0">
          <block type="notify" id="notify_win">
            <field name="NOTIFICATION_TYPE">success</field>
            <value name="MESSAGE">
              <block type="text_join" id="win_message">
                <mutation items="2"></mutation>
                <value name="ADD0">
                  <block type="text" id="text_win">
                    <field name="TEXT">Win: </field>
                  </block>
                </value>
                <value name="ADD1">
                  <block type="read_details" id="win_details">
                    <field name="DETAIL_INDEX">4</field>
                  </block>
                </value>
              </block>
            </value>
            <next>
              <block type="math_change" id="increment_win_count">
                <field name="VAR" id="win_count_var" variabletype="">Win Count</field>
                <value name="DELTA">
                  <shadow type="math_number" id="increment_value">
                    <field name="NUM">1</field>
                  </shadow>
                </value>
                <next>
                  <block type="controls_if" id="check_max_wins">
                    <value name="IF0">
                      <block type="logic_compare" id="compare_max_wins">
                        <field name="OP">GTE</field>
                        <value name="A">
                          <block type="variables_get" id="get_win_count">
                            <field name="VAR" id="win_count_var" variabletype="">Win Count</field>
                          </block>
                        </value>
                        <value name="B">
                          <block type="variables_get" id="get_max_wins">
                            <field name="VAR" id="max_wins_var" variabletype="">Max Wins</field>
                          </block>
                        </value>
                      </block>
                    </value>
                    <statement name="DO0">
                      <block type="text_print" id="print_success">
                        <value name="TEXT">
                          <shadow type="text" id="success_message">
                            <field name="TEXT">Max Wins Reached. Stopping Trading.</field>
                          </shadow>
                        </value>
                      </block>
                    </statement>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </statement>
      </block>
    </statement>
  </block>
</xml>
